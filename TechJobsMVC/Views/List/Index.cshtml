@using TechJobsMVC.Controllers

<div class="container body-content">
    <h1>@ViewBag.title</h1>
    <h2 class="centered">View Jobs By Category</h2>
</div>

<table class="centeredTable">
    <tr>
        @foreach(var column in ViewBag.columns)
        {
            <th>@column.Value</th>
        }
    </tr>
    <tr>
        @{
            //TODO #2: Complete the View Jobs By Category Table DONE
        }

        <td>
            
                @foreach (var job in TechJobsMVC.Data.JobData.FindAll())
                {
                    <p>
    <a asp-controller="List" asp-action="Jobs" asp-route-column="all" asp-route-value="all">@job.ToString()</a>
</p>
                }
            
            
            
        </td> @* Feel free to remove or modify this element if necessary. *@
        @foreach (var choice in @*ViewBag.tableChoices*@ ListController.TableChoices)
        {
            <td>
                <ul>
                    @foreach (var item in choice.Value)
                    {
                        <li>
                            <a asp-controller="List" asp-action="Jobs" asp-route-column="@choice.Key" asp-route-value="@item">@item</a>
                            @* asp-route-* allows Razor to dynamically generate URL query params. *@
                        </li>
                    }
                </ul>
            </td>
        }
    </tr>
        </table>
